<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bitmap_case"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.system.caseandroid.seven.BitmapCaseActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btn_img_size"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="根据手机分辨率获取某个文件下图片大小"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:id="@+id/txt_size"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:id="@+id/et_url"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_img_person"
                    android:layout_height="wrap_content"
                    android:text="@string/get_img"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ima_photo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_img_compress"
                    android:layout_height="wrap_content"
                    android:text="获取网络图片进行压缩"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ima_compress"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
