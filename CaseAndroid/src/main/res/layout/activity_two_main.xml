        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_pz"
        android:text="拍照"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_pz"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_pz1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相册"
        android:id="@+id/btn_xc"/>
    <ImageView
        android:layout_width="wrap_content"
